{
	"inputs": [
		{
			"id": "project-ref",
			"type": "promptString",
			"description": "Supabase project reference ID",
			"password": false
		},
		{
			"id": "read-only",
			"type": "promptString",
			"description": "Enable read-only mode",
			"password": false
		},
		{
			"id": "features",
			"type": "promptString",
			"description": "Comma-separated list of features to enable",
			"password": false
		},
		{
			"id": "api-url",
			"type": "promptString",
			"description": "Custom API URL",
			"password": false
		},
		{
			"id": "SUPABASE_ACCESS_TOKEN",
			"type": "promptString",
			"description": "Personal access token for Supabase API",
			"password": true
		}
	],
	"servers": {


// ==================== OFFICIAL MCP SERVERS ====================
// ENGRAM MEMORY SERVER
// gestiona memoria persistente
    	"engram": {
			"command": "engram",
			"args": ["mcp"]
		},


// SEQUENTIAL THINKING SERVER
// gestiona el pensamiento secuencial, lo que permite a los modelos de lenguaje generar respuestas más coherentes y relevantes al considerar la información en un orden lógico.

