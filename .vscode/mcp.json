// CONTEXT 7 SERVER
// permite a los modelos de lenguaje acceder a información contextual en tiempo real, lo que puede ayudar a mejorar la relevancia y la precisión de las respuestas.

		"context7": {
			"type": "http",
			"url": "https://mcp.context7.com/mcp",
			"headers": {
			"CONTEXT7_API_KEY": "ctx7sk-886f2b65-707a-4755-b844-e6c9e03ea839"
			}
		},


// AWESOME COPILOT
// Permite a los modelos de lenguaje acceder a información contextual en tiempo real, lo que puede ayudar a mejorar la relevancia y la precisión de las respuestas. Proporciona una API simple para acceder a información contextual, lo que facilita la construcción de aplicaciones inteligentes que pueden proporcionar respuestas más relevantes y precisas.
		
		"awesome-copilot": {
			"command": "docker",
			"args": [
				"run",
				"-i",
				"--rm",
				"ghcr.io/microsoft/mcp-dotnet-samples/awesome-copilot:latest"
			],
			"type": "stdio"
		},


